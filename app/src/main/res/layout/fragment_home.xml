<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome, User!"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_start_stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Stepper"
        android:layout_below="@id/welcome_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="16sp"/>



    <ImageView
        android:id="@+id/hand_focus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/hand_icon"
        android:layout_alignBottom="@id/btn_start_stepper"
        android:layout_marginStart="50dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start_stepper"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_count"
        android:layout_marginTop="16dp"
        android:scrollbars="vertical" />


</RelativeLayout>
